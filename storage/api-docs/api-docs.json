{
    "openapi": "3.0.0",
    "info": {
        "title": "Street Burger API",
        "description": "Street Burger Mobile Application Backend API",
        "version": "1.0.0"
    },
    "paths": {
        "/api/auth/signup": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Register a new user",
                "operationId": "App\\Http\\Controllers\\AuthController::signup",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "phone_number",
                                    "password",
                                    "name"
                                ],
                                "properties": {
                                    "phone_number": {
                                        "type": "string",
                                        "example": "0771234567"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "password123"
                                    },
                                    "name": {
                                        "type": "string",
                                        "example": "John Doe"
                                    },
                                    "email": {
                                        "type": "string",
                                        "example": "john@example.com"
                                    },
                                    "date_of_birth": {
                                        "type": "string",
                                        "format": "date",
                                        "example": "1990-01-01"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "User registered successfully"
                    },
                    "400": {
                        "description": "Validation error"
                    }
                }
            }
        },
        "/api/auth/login": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Login with phone number and password",
                "operationId": "App\\Http\\Controllers\\AuthController::login",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "phone_number",
                                    "password"
                                ],
                                "properties": {
                                    "phone_number": {
                                        "type": "string",
                                        "example": "0771234567"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "password123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login successful"
                    },
                    "401": {
                        "description": "Invalid credentials"
                    }
                }
            }
        },
        "/api/auth/generatetoken/{phoneNumber}": {
            "get": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Generate JWT token for a phone number",
                "operationId": "App\\Http\\Controllers\\AuthController::generateToken",
                "parameters": [
                    {
                        "name": "phoneNumber",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Token generated"
                    },
                    "404": {
                        "description": "User not found"
                    }
                }
            }
        },
        "/api/auth/delete/account": {
            "delete": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Delete user account",
                "operationId": "App\\Http\\Controllers\\AuthController::deleteAccount",
                "responses": {
                    "200": {
                        "description": "Account deleted successfully"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/menu/categories": {
            "get": {
                "tags": [
                    "Menu"
                ],
                "summary": "Get all menu categories",
                "operationId": "App\\Http\\Controllers\\MenuController::getAllCategories",
                "responses": {
                    "200": {
                        "description": "List of categories"
                    }
                }
            }
        },
        "/api/menu/items": {
            "get": {
                "tags": [
                    "Menu"
                ],
                "summary": "Get all menu items",
                "operationId": "App\\Http\\Controllers\\MenuController::getAllItems",
                "responses": {
                    "200": {
                        "description": "List of items"
                    }
                }
            },
            "post": {
                "tags": [
                    "Menu"
                ],
                "summary": "Add new item (Admin only)",
                "operationId": "App\\Http\\Controllers\\MenuController::addItem",
                "responses": {
                    "201": {
                        "description": "Item created"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/menu/items/{categoryId}": {
            "get": {
                "tags": [
                    "Menu"
                ],
                "summary": "Get items by category",
                "operationId": "App\\Http\\Controllers\\MenuController::getItemsByCategory",
                "parameters": [
                    {
                        "name": "categoryId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of items in category"
                    }
                }
            }
        },
        "/api/menu/items/popular": {
            "get": {
                "tags": [
                    "Menu"
                ],
                "summary": "Get popular items",
                "operationId": "App\\Http\\Controllers\\MenuController::getPopularItems",
                "responses": {
                    "200": {
                        "description": "List of popular items"
                    }
                }
            }
        },
        "/api/reservations/add": {
            "post": {
                "tags": [
                    "Reservations"
                ],
                "summary": "Create a new reservation",
                "operationId": "App\\Http\\Controllers\\ReservationController::addReservation",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "guest_count",
                                    "reservation_date",
                                    "reservation_time"
                                ],
                                "properties": {
                                    "guest_count": {
                                        "type": "integer",
                                        "example": 4
                                    },
                                    "reservation_date": {
                                        "type": "string",
                                        "format": "date",
                                        "example": "2024-01-20"
                                    },
                                    "reservation_time": {
                                        "type": "string",
                                        "format": "time",
                                        "example": "19:00:00"
                                    },
                                    "special_requests": {
                                        "type": "string",
                                        "example": "Window seat please"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Reservation created"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/reservations/getByPhone/{phoneNumber}": {
            "get": {
                "tags": [
                    "Reservations"
                ],
                "summary": "Get reservations by phone number",
                "operationId": "App\\Http\\Controllers\\ReservationController::getByPhone",
                "parameters": [
                    {
                        "name": "phoneNumber",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of reservations"
                    }
                }
            }
        },
        "/api/reservations/getById/{id}": {
            "get": {
                "tags": [
                    "Reservations"
                ],
                "summary": "Get reservation by ID",
                "operationId": "App\\Http\\Controllers\\ReservationController::getById",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Reservation details"
                    }
                }
            }
        },
        "/api/reviews/add/{phoneNumber}": {
            "post": {
                "tags": [
                    "Reviews"
                ],
                "summary": "Add a new review",
                "operationId": "App\\Http\\Controllers\\ReviewController::addReview",
                "parameters": [
                    {
                        "name": "phoneNumber",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "rating",
                                    "comment"
                                ],
                                "properties": {
                                    "rating": {
                                        "type": "integer",
                                        "example": 5
                                    },
                                    "comment": {
                                        "type": "string",
                                        "example": "Great burger!"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Review added"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/reviews": {
            "get": {
                "tags": [
                    "Reviews"
                ],
                "summary": "Get all reviews",
                "operationId": "App\\Http\\Controllers\\ReviewController::getAllReviews",
                "responses": {
                    "200": {
                        "description": "List of reviews"
                    }
                }
            }
        },
        "/api/rwdpts/addrwdpts": {
            "post": {
                "tags": [
                    "Rewards"
                ],
                "summary": "Add reward points",
                "operationId": "App\\Http\\Controllers\\RewardController::addPoints",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "points",
                                    "description"
                                ],
                                "properties": {
                                    "points": {
                                        "type": "integer",
                                        "example": 10
                                    },
                                    "description": {
                                        "type": "string",
                                        "example": "Order bonus"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Points added"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/rwdpts/getrwdpts": {
            "get": {
                "tags": [
                    "Rewards"
                ],
                "summary": "Get user reward points",
                "operationId": "App\\Http\\Controllers\\RewardController::getPoints",
                "responses": {
                    "200": {
                        "description": "Total points and transaction history"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
    "security": [
        []
    ]
}